<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Client Info Header -->
    <style name="Client_header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:background">@color/sky_blue</item>

    </style>

    <style name="Client_profile_picture_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_16</item>
        <item name="android:background">@drawable/image_background</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Chat_icon_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_16</item>
        <item name="android:background">@drawable/image_background</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_8</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="Client_header_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Service_requested_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_8</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/vertical_padding_8</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_8</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Edit_text_style.fixedHeight">
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="Client_info_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
        <item name="android:paddingBottom">@dimen/vertical_padding_8</item>
        <item name="android:paddingEnd">@dimen/horizontal_padding_16</item>
        <item name="android:paddingStart">@dimen/horizontal_padding_16</item>
        <item name="android:paddingTop">@dimen/vertical_padding_8</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_8</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Address_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_8</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin_8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Address_info_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_16</item>
    </style>

    <style name="Address_info_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_address_background</item>
        <item name="android:layout_marginBottom">@dimen/horizontal_margin_8</item>
    </style>

    <style name="Address_info_edit_text_style.margin16">
        <item name="android:layout_marginStart">@dimen/horizontal_margin_16</item>
    </style>

    <style name="Address_info_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin_8</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin_8</item>
    </style>

    <style name="Service_request_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingEnd">@dimen/horizontal_margin_8</item>
        <item name="android:paddingStart">@dimen/horizontal_margin_8</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
